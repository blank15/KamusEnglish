<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".View.DetailKamus">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/browaub"
            android:id="@+id/text_kata"
            android:text="@string/default_text"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_dummy"
            android:text="@string/keterangan"
            android:fontFamily="@font/browau"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/text_kata"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_keterangan"
            android:fontFamily="@font/browaui"
            android:textSize="24sp"
            android:text="@string/default_text"
            app:layout_constraintTop_toBottomOf="@+id/text_dummy"
            android:layout_margin="8dp"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>